<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_data_of_creation_of_manicure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_text_view_data"
                android:text="@string/data_of_creation_of_manicure" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_data_of_creation_of_manicure"
                android:layout_margin="@dimen/linear_layout_margin">

                <ImageView
                    android:id="@+id/image_view_first_manicure"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_view_height"
                    android:layout_margin="@dimen/image_view_margin"
                    android:layout_weight="1"
                    android:src="@drawable/manicure_first" />

                <ImageView
                    android:id="@+id/image_view_second_manicure"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_view_height"
                    android:layout_margin="@dimen/image_view_margin"
                    android:layout_weight="1"
                    android:src="@drawable/manicure_second" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>